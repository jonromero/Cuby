
begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "cuby"
    gemspec.summary = "A tiny C-like language built on top of Ruby."
    gemspec.description = "A tiny C-like language built on top of Ruby, in less than 20 lines of code."
    gemspec.email = "jon@emotionull.com"
    gemspec.homepage = "http://github.com/jonromero/Cuby"
    gemspec.executables = ["cuby", "icb"]
    gemspec.authors = ["Jon Vlachoyiannis", "Jim Myhrberg"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end
